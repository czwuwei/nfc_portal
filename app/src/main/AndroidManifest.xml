<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.fmap.nfcportal" >
    <uses-permission android:name="android.permission.NFC"/>
    <!--<uses-permission android:name="android.permission.BIND_NFC_SERVICE"/>-->
    <uses-feature android:name="android.hardware.nfc" android:required="true"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <!--<action android:name="android.nfc.action.NDEF_DISCOVERED"/>-->
                <!--<action android:name="android.nfc.action.TECH_DISCOVERED"/>-->
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <!--<meta-data android:name="android.nfc.action.NDEF_DISCOVERED" android:resource="@xml/nfc_filter"/>-->
            <!--<meta-data android:name="android.nfc.action.TECH_DISCOVERED" android:resource="@xml/nfc_filter"/>-->
            <meta-data android:name="android.nfc.action.TAG_DISCOVERED" android:resource="@xml/nfc_filter"/>
        </activity>
    </application>

</manifest>