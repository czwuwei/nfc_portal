<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.co.fmap.nfcportal.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Command Type"
        />

    <EditText
        android:id="@+id/edtCmdType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Command Type"
        android:text="06"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="System codes"/>

    <EditText
        android:id="@+id/edtSystemCodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="seperated by ','"
        android:text="0f09"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="block count"/>

    <SeekBar
        android:id="@+id/seekBar_blockCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20"
        android:progress="12"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="block index length"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_block_length">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioButton_2bytes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 bytes"
            android:layout_weight="1"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton_3bytes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 bytes"
            android:layout_weight="1"/>
        </LinearLayout>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="block access mode"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_block_access_mode">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_withoutCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exclude cache"
                android:layout_weight="1"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioButton_withCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cache"
                android:layout_weight="1"/>

        </LinearLayout>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="system code index"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_system_index"
        android:max="15"
        android:progress="0"/>

    <Button
        android:text="Transceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnTransceive"
        style="@android:style/Widget.Holo.Light.Button.Borderless"/>

</LinearLayout>
